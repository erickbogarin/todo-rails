<% content_for :head do %>
	<%= stylesheet_link_tag params[:controller] %>
<% end %>

<% content_for :title, "Profile" %>

<div class="profile">
	<aside class="profile-card">
	  
	  <header>
	    
	    
	    <img src="https://www.r-users.com/wp-content/plugins/all-in-one-seo-pack/images/default-user-image.png">
	    

	    <h1><%= @user.name %></h1>
	    
	    <h2>Web & Mobile Developer</h2>
	    
	  </header>
	  
	  <div class="profile-bio">
	    
	    <p><%= @user.about %></p>
	    
	  </div>
	  
	  <ul class="profile-social-links">

  	    <% ['twitter'].each do |provider| %>
		    <% if current_user.authorizations.pluck(:provider).include?(provider.to_s) %>
		    <li>
		      <a href="http://twitter.com/<%= current_user.username %>">
		        <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/210284/social-twitter.svg">
		      </a>
		    </li>
		    <% end %>
	    <% end %>
	    <li>
	      <%= link_to ' Edit', edit_user_path(@user), class: 'fi-pencil' %>
	    </li>
	        
	  </ul>
	  
	</aside>
</div>
